# Flask Configuration
# CRITICAL SECURITY: Generate a strong SECRET_KEY for production!
# Run this command to generate: python -c "import secrets; print(secrets.token_hex(32))"
# Example output: 49437ab244c7620b0fcd7a65951c8e5ff8e506f4b060743d38b46f37c8e206c5
SECRET_KEY=your-secret-key-here-GENERATE-WITH-COMMAND-ABOVE

# Environment: development | production | testing
FLASK_ENV=development

# Debug mode (MUST be False in production!)
FLASK_DEBUG=True

# Database
# Development (SQLite)
# DATABASE_URL=sqlite:///atlas_performance.db

# MySQL (XAMPP Default Configuration)
DATABASE_URL=mysql+pymysql://root:@localhost:3306/atlas_performance
# Note: XAMPP MySQL default user is 'root' with no password
# If you set a password: mysql+pymysql://root:your_password@localhost:3306/atlas_performance

# Production MySQL (with password)
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/atlas_performance

# Stripe Keys (Test Mode)
STRIPE_PUBLIC_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs for Subscription Tiers
STRIPE_PRICE_STARTER=price_starter_monthly
STRIPE_PRICE_PRO=price_pro_monthly
STRIPE_PRICE_ENTERPRISE=price_enterprise_monthly

# AWS S3 (Optional for video storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=atlas-performance-videos
AWS_REGION=eu-west-1

# ============================================================================
# EMAIL CONFIGURATION (REQUIRED for production)
# ============================================================================
# Email is used for:
#   - Password reset emails
#   - Welcome emails
#   - Workout reminders
#   - Check-in notifications
#   - Progress updates
#
# Choose ONE of these options:
#
# OPTION 1: Gmail (Recommended for development/small scale)
# ----------------------------------------------------------
# 1. Go to https://myaccount.google.com/apppasswords
# 2. Create an "App Password" for "Mail"
# 3. Use the 16-character password below
#
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_16_char_app_password
MAIL_DEFAULT_SENDER=your_email@gmail.com
#
# OPTION 2: SendGrid (Recommended for production/high volume)
# ------------------------------------------------------------
# 1. Sign up at https://sendgrid.com (Free tier: 100 emails/day)
# 2. Create an API Key with "Mail Send" permission
# 3. Use these settings:
#
# MAIL_SERVER=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USE_SSL=False
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your_sendgrid_api_key_here
# MAIL_DEFAULT_SENDER=noreply@yourdomain.com
#
# OPTION 3: Custom SMTP (e.g., Office 365, Mailgun, AWS SES)
# -----------------------------------------------------------
# MAIL_SERVER=smtp.yourdomain.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USE_SSL=False
# MAIL_USERNAME=your_smtp_username
# MAIL_PASSWORD=your_smtp_password
# MAIL_DEFAULT_SENDER=noreply@yourdomain.com
#
# NOTE: Leave MAIL_USERNAME empty to disable email features (dev mode)
# ============================================================================

# App Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB max file upload
UPLOAD_FOLDER=app/static/uploads
ALLOWED_VIDEO_EXTENSIONS=mp4,mov,avi
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif

# CDN Configuration (Optional - for production)
CDN_ENABLED=False
CLOUDFLARE_CDN_DOMAIN=cdn.atlasperformance.com
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Redis Configuration (Optional - for production caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting (production uses Redis, development uses memory)
RATELIMIT_ENABLED=True
RATELIMIT_STORAGE_URL=memory://
